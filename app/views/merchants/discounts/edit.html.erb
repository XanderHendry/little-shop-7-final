<h3>Edit Discount</h3>
<%= form_with url: "/merchants/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, data: { turbo: false} do |f| %>
  <%= f.label :percentage %>
  <%= f.number_field :percentage, in: 1..100, value: @discount.percentage%>
  <%= f.label :threshold %>
  <%= f.number_field :threshold, value: @discount.threshold %>
  <%= f.submit "Update" %>
<% end %>